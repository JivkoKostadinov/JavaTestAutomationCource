
public class Employee extends Person {

	double daySalary;
	
	void Employee(){
		
		this.name = name;
		this.age = age;
		this.isMan= isMan;
		this.daySalary=daySalary;
		
	}
		
	double calculateOverTime(double hours){
			
			if (this.age > 18) {
				
				this.daySalary= 0;

			}else if (hours > 8 ) {
				
				return this.daySalary;
				
			}else if (hours > 8 ) {
				
				double dailySum = daySalary / 8;
				
				daySalary = dailySum * 1.5;
	
			}
			
			return daySalary;
			
		}
	
	
	
	
	
	
	
}
